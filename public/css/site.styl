/* GLOBAL STYLES
-------------------------------------------------- */
/* Padding below the footer and lighter body text */
html {
  position: relative;
  min-height: 100%;
}

body {
  color: #5a5a5a;
  margin-bottom: 60px;
  background-color: #EEE0A7;
  text-align: center;
}

ul, li {
  list-style-type: none;
}

#recaptcha_area {
    margin: 0 auto;
}

/* Ad Block Buster */
#tester {
    display:none;
}


/* Sticky footer styles
-------------------------------------------------- */
footer {
  position: absolute;
  bottom: 0;
  width: 100%;
  /* Set the fixed height of the footer here */
  height: 60px;
  background-color: #f5f5f5;
}

